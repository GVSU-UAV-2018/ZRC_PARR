<StatusWidget>:
    rows: 4

    GridLayout:
        cols: 2
        Label:
            id: altitude_lbl
            text: 'Altitiude'
            text_size: self.width, self.height
            font_size: self.width / 10
        Button:
            size_hint: (None, None)
            right: root.right
            size: 40, 40
            Image:
                source: 'Assets/Icons/cog_settings.png'
                pos: self.parent.pos
                size: self.parent.size

    GridLayout:
        id: test_grid
        cols: 2
        size: self.size


        Label:
            halign: 'left'
            id: heading_lbl
            text: 'Heading'
            size_hint: 0.33, 1
            font_size: 20


        Label:
            id: heading_val
            text: '30.00'
            size_hint: 0.66, 1
            font_size: 20





