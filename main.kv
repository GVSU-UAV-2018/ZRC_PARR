<MainWidget>:
    rows: 3
    ActionBar:
        pos_hint: {'top': 1}
        ActionView:
            use_separator: False
            ActionPrevious:
                with_previous: False
            ActionOverflow:
            ActionButton:
                text: 'Settings'
                pos_hint: {'left': 1}
                on_release: app.open_settings()
            ActionButton:
                text: 'Exit'
                pos_hint: {'left': 1}
                on_release: root.exit()
    BoxLayout:
        orientation: 'horizontal'
        ReceiverParamsWidget:
            size_hint_x: 0.25

        Label:
            text: 'test'
            size_hint_x: 0.5
            canvas.after:
                Color:
                    rgba: 0.5,0.5,0,0.5
                Rectangle:
                    pos: self.pos
                    size: self.size
        Label:
            size_hint_x: 0.25
            text: 'text test'
    StackLayout:
        orientation: 'lr-tb'
        size: (root.width, 40)
        size_hint: (None, None)
        Label:
            size_hint_x: 0.25
            canvas.after:
                Color:
                    rgba:0.3,0.3,0.3,0.5
                Rectangle:
                    pos: self.pos
                    size: self.size
        Button:
            id: start_btn
            text: "Start"
            background_color: [0,0,1,1]
            foreground_color: [1,1,1,1]
            size_hint_x: 0.5