
<TopActionBar@ActionBar>
    ActionView:
        use_separator: False
        ActionPrevious:
            with_previous: False
            size_hint_x: None
        ActionButton
            text: 'Settings'
            halign: 'left'
            size_hint_x: None
            on_release: app.open_settings()

<StatusDisplay@BoxLayout>
    orientation: 'vertical'



<MainWidget>:
    rows: 3
    TopActionBar:
        valign: 'top'
        height: 40
        size_hint_y: None

    BoxLayout:
        orientation: 'horizontal'
        StatusWidget:
            size_hint_x: 0.25


        Label:
            text: 'test'
            size_hint_x: 0.5
            canvas.after:
                Color:
                    rgba: 0.5,0.5,0,0.5
                Rectangle:
                    pos: self.pos
                    size: self.size
        Label:
            size_hint_x: 0.25
            text: 'text test'
    StackLayout:
        orientation: 'lr-tb'
        size: (root.width, 40)
        size_hint: (None, None)
        Label:
            id: label_one
            size_hint_x: 0.25
            canvas.after:
                Color:
                    rgba:0.3,0.3,0.3,0.5
                Rectangle:
                    pos: self.pos
                    size: self.size
        Button:
            id: start_btn
            text: "Start"
            background_color: [0,0,1,1]
            foreground_color: [1,1,1,1]
            size_hint: (None, None)
            size: (self.parent.width - (label_one.width * 2) - start_settings.width, self.parent.height)

        Button:
            id: start_settings
            size: (40,40)
            size_hint: (None, None)
            on_press: root.on_start_settings_press()

            Image:
                source: 'Assets/Icons/cog_settings.png'
                pos: self.parent.pos
                size: self.parent.size